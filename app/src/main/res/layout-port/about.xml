<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/aboutIVIcon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:maxHeight="512dp"
        android:maxWidth="512dp"
        android:src="@drawable/bigicon"
        android:contentDescription="Big icon" />

    <TextView
        android:id="@+id/aboutTVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/clickableextviewstates" />

    <TextView
        android:id="@+id/aboutTVCredits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="@string/aboutCredits"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>